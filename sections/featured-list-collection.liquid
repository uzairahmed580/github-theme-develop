<section>
    <div class="featured-list-collection">
        <div class="featured-list-collection__wrepper">
            {%- for block in section.blocks -%}
                <div class="featured-list-collection__content">
                    <a href="{{ block.settings.link }}"> 
                        {%- if block.settings.title != blank -%}
                            <p class="shop-title">
                                {{ block.settings.title }}
                            </p>
                        {%- endif -%}
                        {%- if block.settings.sub_title != blank -%}
                            <p class="shop-sub-title">
                                {{ block.settings.sub_title }}
                            </p>
                        {%- endif -%}
                        {%  comment  %} 
                        {% if block.settings.svgCode != blank %}
                            <div class="collection-img">
                                {{ block.settings.svgCode }}
                            </div>
                        {% endif %} {% endcomment %}
                    </a>
                </div>
            {%- endfor -%}
        </div>
    </div>
</section>
{{ 'section-featured-list-collection.css' | asset_url | stylesheet_tag }}
{% schema %}
{
  "name": "Featured List Collection",
  "settings": [

  ],
  "blocks": [
    {
      "type": "Collection",
      "name": "collection",
      "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "text",
            "id": "sub_title",
            "label": "Sub Title"
        },
        {
            "type": "html",
            "id": "svgCode",
            "label": "Collection image"
        },
        {
            "type": "url",
            "id": "link",            
            "label": "Collection link"
        }
      ]
    }
  ],
  "presets": [{
        "name": "Featured List Collection"
  }]
}
{% endschema %}
