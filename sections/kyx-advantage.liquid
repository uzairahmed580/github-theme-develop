<section>
  <div class="kyx-adv-content">
    {% for block in section.blocks %}
      <div class="kyx-adv-content-item {% if block.settings.image_alignment == 'right' %}right{% else %}left{% endif %}">
        <div class="kyx-adv-content-item-img {% if block.settings.image_alignment == 'right' %}lg_order-2 {% endif %}">
          {% if block.settings.image != blank %}
            <img
              data-src="{{ block.settings.image | img_url: 'master' }}"
              src="https://cdn.shopify.com/s/files/1/0720/7819/7049/files/advantages-imgs.jpg?v=1691128846"
              class="merox-lazy"
              width="952px"
              height="635px"
              alt="kyx Advantage Img" />
          {% endif %}
        </div>
        <div class="kyx-adv-content-item-txt lg_order-1 {% if block.settings.image_alignment == 'right' %} lg_order-1 {% endif %}">
          <div class="kyx-adv-content-item-txt-detail">
            <div class="kyx-adv-item-txt-detail-img">
              {% if block.settings.icon_image != blank %}
                <img
                  src="{{ block.settings.icon_image  }}"
                  width="225px"
                  height="247px"
                  alt="kyx Advantage Icon Img" />
              {% endif %}

            </div>
            <div class="kyx-adv-item-txt-detail-txt">
              {% if block.settings.title != blank %}
                <h2>{{ block.settings.title | escape }}</h2>
              {% endif %}
              {% if block.settings.sub_title != blank %}
                <p>{{ block.settings.sub_title | newline_to_br }}</p>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>
