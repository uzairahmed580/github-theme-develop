</style>
{% schema %}
  {
    "name": "Pro Clean Policy",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      }, {
        "type": "textarea",
        "id": "desc",
        "label": "Desc"
      }, {
        "type": "text",
        "id": "note_title",
        "label": "Note Title"
      }, {
        "type": "textarea",
        "id": "note_desc",
        "label": "Note Desc"
      }
    ],
    "blocks": [
      {
        "type": "policy",
        "name": "Policy",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Policy Title"
          }, {
            "type": "richtext",
            "id": "desc",
            "label": "Policy Desc"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Pro Clean Policy"
      }
    ]
  }
{% endschema %}