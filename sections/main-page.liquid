{{ 'AboutUs.css' | asset_url | stylesheet_tag }}
<link
  rel="stylesheet"
  href="{{ 'section-main-page.css' | asset_url }}"
  media="print"
  onload="this.media='all'">
<link
  rel="stylesheet"
  href="{{ 'component-rte.css' | asset_url }}"
  media="print"
  onload="this.media='all'">
<link
  rel="icon"
  type="image/x-icon"
  href="/images/favicon.ico">
<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}
    px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}
    px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}
      px;
      padding-bottom: {{ section.settings.padding_bottom }}
      px;
    }
  }



  .static-page-banner img {
    width: 100%;
    height: auto;
    display: block;
  }
  .static-page-title h2 {
    font-family: Termina;
    font-style: normal;
    font-weight: 600;
    font-size: 64px;
    line-height: 65px;
    text-align: center;
    color: #0062ff;
    padding: 2rem 0;
  }
  .static-page-heading {
    background-color: #fff;
  }
  .static-banner {
    padding-bottom: 50px;
  }
  .static-page-banner {
    background: #fff;
  }
  @media only screen and (max-width: 990px) {
    .static-page-title h2 {
      font-size: 32px;
      line-height: 40px;
      padding: 1rem 0;
    }
  }
{%- endstyle -%}

{% if page.title == "About" %}

  <div id="search_firstContainer" class="">

    {% comment %}            
    <div class="card_first_container">
    <div class="card_second_container">
    <div style="cursor:pointer" onclick="window.location.href='{{ shop.secure_url }}'"> Home</div> 
    <img
    src="https://cdn.shopify.com/s/files/1/0720/7819/7049/files/side_icon_fa0a9189-8a9b-44d7-83ed-8ae9ecebdbc5.png?v=1680627384"
    style="height: 1rem; width: 1rem"
    alt="side"
    />
    Pages
    </div>
    <div class="card_title">{{ page.title | escape }}</div>
    </div>
    {% endcomment %}

    <div class="page-width pageTitle">{{ page.title | escape }}</div>

    <img
      class="aboutUsPoster"
      src="{{ 'AboutUsPoster.png' | asset_url }}"
      alt="poster" />

    <div class='aa'>
      <div class="AboutUsContained">
        {{ page.content }}
      </div>
    </div>


    <div class="followUs">
      <div class="followTitle">FOLLOW US ON</div>
      <div class="followUSLogoContainer">
        <img
          id="instaLogo"
          src="{{ 'logo-instagram.png' | asset_url }}"
          alt="insta" />
        <img
          id="facebookLogo"
          src="{{ 'Iogo-facebook.png' | asset_url }}"
          alt="fac" />
        <img
          id="tiktokLogo"
          src="{{ 'Iogo-tiktok.png' | asset_url }}"
          alt="tiktok" />
        <img
          id="youtubeLogo"
          src="{{ 'logo-youtube.png' | asset_url }}"
          alt="youtube" />
      </div>
    </div>
  </div>
{% else if page.handle contains "faq" %}
  {{ 'FAQ.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'FAQ.js' | asset_url }}" defer="defer"></script>

  <div id="search_firstContainer" class="faq_page">
    <div class="static-banner">
      <div class="static-page-banner">
        <img
          src="https://cdn.shopify.com/s/files/1/0720/7819/7049/files/kyx-desktop-banner.png?v=1686302463"
          width="1920px"
          height="424px"
          alt="kyx-page-banner">
      </div>
      <div class="static-page-heading">
        <div class="page-width">
          <div class="static-page-title">
            <h2>{{ page.title | escape }}</h2>
          </div>
        </div>
      </div>
    </div>
    {% comment %} <div class="page-width"><div class="pageTitle">{{ page.title | escape }}</div> </div> {% endcomment %}
    {% if page.title == "The KYX Advantage" %}
      {% comment %}
      <div class="banner">&nbsp;</div>
      {% endcomment %}
    {% endif %}
    {% if page.handle == "about" %}
      {% comment %} <div class="banner">&nbsp;</div> {% endcomment %}
    {% endif %}
    {% if page.handle == "kyx-rating" %}
      {% comment %}<img class="banner" src="https://cdn.shopify.com/s/files/1/0720/7819/7049/files/Group_1270_2x_20983542-4c52-47c8-999a-e92e31872868.png?v=1685978881" alt="banner" />{% endcomment %}
    {% endif %}
    <div class="page-width faq_page">
      <div class="AboutUsContained">
        <div id="FAQ_container">
          <div class="question_answer">
            <div class="question_answer_content">
              {{ page.content }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

{% else %}

  <div class="page-width page-width--narrow section-{{ section.id }}-padding">



    <h1 class="main-page-title page-title h0">
      {{ page.title | escape }}
    </h1>
    <div class="rte">
      {{ page.content }}
    </div>
  </div>

{% endif %}

{% schema %}
  {
    "name": "t:sections.main-page.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ]
  }
{% endschema %}