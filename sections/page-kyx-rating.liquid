{{ 'page-kyx-rating.css' | asset_url | stylesheet_tag }}
{% assign defects-issues = false %} 
{% assign qualifier = false %} 
{%- for block in section.blocks -%}
  {% case block.type %}
    {% when 'defects-issues' %}
      {% assign defects-issues = true %} 
    {% when 'qualifier' %}
      {% assign qualifier = true %} 
  {% endcase%}
{% endfor %}
<section class="kyx-rating">
    <div class="kyx-rating_banner">
        {% liquid
            assign desktopImg = section.settings.image
            assign mobileImg = section.settings.image
            if section.settings.sm_image != blank
                assign mobileImg = section.settings.sm_image
            endif
          %}
        {% if section.settings.image != blank %}
            <img class="md-visible merox-lazy" data-src="{{ desktopImg | img_url: 'master' }}" src="https://cdn.shopify.com/s/files/1/0720/7819/7049/files/about-banner-main-banner-desktop.jpg?v=1691127797" alt="{{ section.settings.title | escape }}" width="1920px" height="476px">
        {% endif %}
        <img class="md-hidden merox-lazy" data-src="{{ mobileImg | img_url: 'master' }}" src="https://cdn.shopify.com/s/files/1/0720/7819/7049/files/about-banner-main-banner-mobile.jpg?v=1691128496" alt="{{ section.settings.title | escape }}" width="375px" height="263px" >
    </div>

    <div class="rating-system">
        <div class="kyx-rating_title">
            {% if section.settings.title != blank %}
                <h2>{{ section.settings.title | escape }}</h2>
            {% else %}
                <h2>{{ page.title | escape }}</h2>
            {% endif %}
        </div>
        <div class="kyk-rating_desc">
            {% if section.settings.sub_title != blank %}
                <p>{{ section.settings.sub_title | newline_to_br }}</p>
            {% endif %}
        </div>
        <div class="mobile_content page-width">
            <a class="scrollLink" href="#link1"><p>RATINGS BREAKDOWN</p></a>
            <a class="scrollLink" href="#link2"><p>UNderstanding weighting</p></a>
            <a class="scrollLink" href="#link3"><p>DEFECTS/ISSUES</p></a>
            <a class="scrollLink" href="#link4"><p>QUALIFIERS</p></a>
            <a class="scrollLink" href="#link5"><p style="border-bottom: 2px solid #fff;">EYE APPEAL & SUBJECTIVITY</p></a>
        </div>       
    </div>
    <div class="kyx-rating_bg-blue_text">
        {% if section.settings.tag_line != blank %}
            <p>{{ section.settings.tag_line | newline_to_br }}</p>
        {% endif %}
    </div>
    {%- for block in section.blocks -%}
      {% case block.type %}
        {% when 'ratings-breakdown' %}
          <div class="rating-img-with-text page-width" id="link1">
            <div class="rating-img-with-text__content">
              {% if block.settings.title != blank %}
                <p class="rating-img-with-text_title">{{ block.settings.title }}</p>
              {% endif %}
              {% if block.settings.sub_title != blank %}
                <p class="rating-img-with-text_desc">{{ block.settings.sub_title | newline_to_br }}</p>
              {% endif %}
              {% if block.settings.tag_line != blank %}
                <p class="rating-img-with-text_subtitle">{{ block.settings.tag_line | newline_to_br }}</p> 
              {% endif %}           
            </div>
            <div class="rating-img-with-text-first-flex">
                <div class="first-flex-content">
                    <div class="first-flex-img">
                      {% if block.settings.breakdown_image_1 != blank %}
                        <img data-src="{{ block.settings.breakdown_image_1 | img_url: 'master' }}" src="https://cdn.shopify.com/s/files/1/0720/7819/7049/files/rating-page-seconds-imgs.jpg?v=1691130580" class="merox-lazy" width="443px" height="295px" alt="upper">
                      {% endif %}
                    </div>
                    <div class="first-flex-txt">
                      {% if block.settings.breakdown_title_1 != blank %}
                        <h2>{{ block.settings.breakdown_title_1 }}</h2>
                      {% endif %}
                      {% if block.settings.breakdown_desc_1 != blank %}
                        <p>{{ block.settings.breakdown_desc_1 | newline_to_br }}</p>
                      {% endif %}                        
                    </div>
                </div>
                <div class="first-flex-content">
                  <div class="first-flex-img">
                    {% if block.settings.breakdown_image_2 != blank %}
                      <img data-src="{{ block.settings.breakdown_image_2 | img_url: 'master' }}" src="https://cdn.shopify.com/s/files/1/0720/7819/7049/files/rating-page-seconds-imgs.jpg?v=1691130580" class="merox-lazy" width="443px" height="295px" alt="upper">
                    {% endif %}
                  </div>
                  <div class="first-flex-txt">
                    {% if block.settings.breakdown_title_2 != blank %}
                      <h2>{{ block.settings.breakdown_title_2 }}</h2>
                    {% endif %}
                    {% if block.settings.breakdown_desc_2 != blank %}
                      <p>{{ block.settings.breakdown_desc_2 | newline_to_br }}</p>
                    {% endif %}                        
                  </div>
                </div>
            </div>
            <div class="rating-img-with-text-second-flex">
                <div class="second-flex-content">
                  <div class="second-flex-img">
                    {% if block.settings.breakdown_image_3 != blank %}
                      <img data-src="{{ block.settings.breakdown_image_3 | img_url: 'master' }}" src="https://cdn.shopify.com/s/files/1/0720/7819/7049/files/rateing-page-last-imgs.jpg"  class="merox-lazy" width="443px" height="295px" alt="upper">
                    {% endif %}
                  </div>
                  <div class="second-flex-txt">
                    {% if block.settings.breakdown_title_3 != blank %}
                      <h2>{{ block.settings.breakdown_title_3 }}</h2>
                    {% endif %}
                    {% if block.settings.breakdown_desc_3 != blank %}
                      <p>{{ block.settings.breakdown_desc_3 | newline_to_br }}</p>
                    {% endif %}                        
                  </div>
                </div>
                <div class="second-flex-content">
                  <div class="second-flex-img">
                    {% if block.settings.breakdown_image_4 != blank %}
                      <img data-src="{{ block.settings.breakdown_image_4 | img_url: 'master' }}" src="https://cdn.shopify.com/s/files/1/0720/7819/7049/files/rateing-page-last-imgs.jpg"  class="merox-lazy" width="443px" height="295px" alt="upper">
                    {% endif %}
                  </div>
                  <div class="second-flex-txt">
                    {% if block.settings.breakdown_title_4 != blank %}
                      <h2>{{ block.settings.breakdown_title_4 }}</h2>
                    {% endif %}
                    {% if block.settings.breakdown_desc_4 != blank %}
                      <p>{{ block.settings.breakdown_desc_4 | newline_to_br }}</p>
                    {% endif %}                        
                  </div>
                </div>
                <div class="second-flex-content">
                  <div class="second-flex-img">
                    {% if block.settings.breakdown_image_5 != blank %}
                      <img data-src="{{ block.settings.breakdown_image_5 | img_url: 'master' }}" src="https://cdn.shopify.com/s/files/1/0720/7819/7049/files/rateing-page-last-imgs.jpg" class="merox-lazy" width="443px" height="295px" alt="upper">
                    {% endif %}
                  </div>
                  <div class="second-flex-txt">
                    {% if block.settings.breakdown_title_5 != blank %}
                      <h2>{{ block.settings.breakdown_title_5 }}</h2>
                    {% endif %}
                    {% if block.settings.breakdown_desc_5 != blank %}
