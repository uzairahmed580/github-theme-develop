    {%- for block in section.blocks -%}
      {% case block.type %}
        {% when 'understanding-weighting' %}
          <div class="product-overview" id="link2">
            <div class="page-width">
                <div class="product-overview-content">
                  {% if block.settings.title != blank %}
                    <h2>{{ block.settings.title }}</h2>
                  {% endif %}
                  {% if block.settings.desc != blank %}
                    <p>{{ block.settings.desc | newline_to_br }}</p>
                  {% endif %}
                </div>
            </div>
          </div>
        {% endcase %}
      {%- endfor -%}

      <div class="product-defects-issues page-width" >
        <div class="product-defects-issues__content">
          {% if defects-issues %}
            {%- for block in section.blocks -%}
              {% case block.type %}
                {% when 'defects-issues' %}
                  <div class="defects-issues" id="link3">
                      <div class="top_content">
                        {% if block.settings.title != blank %}
                          <h6>{{ block.settings.title }}</h6>
                        {% endif %}
                        {% if block.settings.desc != blank %}
                          <p>{{ block.settings.desc | newline_to_br }}</p>
                        {% endif %}
                      </div>
                      <div class="bottom_content">
                          <div>
                            {% if block.settings.defects_title_1 != blank %}
                              <h6>{{ block.settings.defects_title_1 }}</h6>
                            {% endif %}
                            {% if block.settings.defects_desc_1 != blank %}
                              <p>{{ block.settings.defects_desc_1 | newline_to_br }}</p>
                            {% endif %}
                          </div>
                          <div>
                            {% if block.settings.defects_title_2 != blank %}
