                            {% endif %}
                            {% if block.settings.defects_desc_2 != blank %}
                              <p>{{ block.settings.defects_desc_2 | newline_to_br }}</p>
                            {% endif %}
                          </div>
                          <div>
                            {% if block.settings.defects_title_3 != blank %}
                              <h6>{{ block.settings.defects_title_3 }}</h6>
                            {% endif %}
                            {% if block.settings.defects_desc_3 != blank %}
                              <p>{{ block.settings.defects_desc_3 | newline_to_br }}</p>
                            {% endif %}
                          </div>
                          <div>
                            {% if block.settings.defects_title_4 != blank %}
                              <h6>{{ block.settings.defects_title_4 }}</h6>
                            {% endif %}
                            {% if block.settings.defects_desc_4 != blank %}
                              <p>{{ block.settings.defects_desc_4 | newline_to_br }}</p>
                            {% endif %}
                          </div>
                          <div>
                            {% if block.settings.defects_title_5 != blank %}
                              <h6>{{ block.settings.defects_title_5 }}</h6>
                            {% endif %}
                            {% if block.settings.defects_desc_5 != blank %}
                              <p>{{ block.settings.defects_desc_5 | newline_to_br }}</p>
                            {% endif %}
                          </div>
                      </div>
                  </div>
              {% endcase %}
            {%- endfor -%}
          {% endif %}
          {% if qualifier %}
            {%- for block in section.blocks -%}
              {% case block.type %}
                {% when 'qualifier' %}
                <div class="qualifires" id="link4">
                    <div class="top_content">
                      {% if block.settings.title != blank %}
                        <h6>{{ block.settings.title }}</h6>
                      {% endif %}
                      {% if block.settings.desc != blank %}
                        <p>{{ block.settings.desc | newline_to_br }}</p>
                      {% endif %}
                    </div>
                    <div class="bottom_content">
                        <div>
                          {% if block.settings.qualifire_title_1 != blank %}
                            <h6>{{ block.settings.qualifire_title_1 }}</h6>
                          {% endif %}
                          {% if block.settings.qualifire_desc_1 != blank %}
                            <p>{{ block.settings.qualifire_desc_1 | newline_to_br }}</p>
                          {% endif %}
                        </div>
                        <div>
                          {% if block.settings.qualifire_title_2 != blank %}
                            <h6>{{ block.settings.qualifire_title_2 }}</h6>
                          {% endif %}
                          {% if block.settings.qualifire_desc_2 != blank %}
                            <p>{{ block.settings.qualifire_desc_2 | newline_to_br }}</p>
                          {% endif %}
                        </div>
                        <div>
                          {% if block.settings.qualifire_title_3 != blank %}
                            <h6>{{ block.settings.qualifire_title_3 }}</h6>
                          {% endif %}
                          {% if block.settings.qualifire_desc_3 != blank %}
                            <p>{{ block.settings.qualifire_desc_3 | newline_to_br }}</p>
                          {% endif %}
                        </div>
                        <div>
                          {% if block.settings.qualifire_title_4 != blank %}
                            <h6>{{ block.settings.qualifire_title_4 }}</h6>
                          {% endif %}
                          {% if block.settings.qualifire_desc_4 != blank %}
                            <p>{{ block.settings.qualifire_desc_4 | newline_to_br }}</p>
                          {% endif %}
                        </div>
                      
                    </div>
                </div>
              {% endcase %}
            {%- endfor -%}
          {% endif %}
        </div>
      </div>

      {%- for block in section.blocks -%}
        {% case block.type %}
        {% when 'subjectivity' %}
          <div class="page-width" id="link5">
            <div class="subjectivity">
              {% if block.settings.title != blank %}
                <h6>{{ block.settings.title }}</h6>
              {% endif %}
              {% if block.settings.desc != blank %}
                <p>{{ block.settings.desc | newline_to_br }}</p>
              {% endif %}
            </div>
          </div>
          <div class="bg_logo-img">
            <img src="https://cdn.shopify.com/s/files/1/0720/7819/7049/files/foot-load.png?v=1686206737" alt="Kyx Background Img" width="1316px" height="695px">
          <div>
        {% endcase %}
      {%- endfor -%}


</section >
