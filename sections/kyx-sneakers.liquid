{{ 'page-kyx-sneakers.css' | asset_url | stylesheet_tag }}
{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}
{{ 'component-rte.css' | asset_url | stylesheet_tag }}
{% comment %}{{ 'component-multicolumn.css' | asset_url | stylesheet_tag }}{% endcomment %}

<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>

{% assign defects-issues = false %}
{% assign qualifier = false %}
{%- for block in section.blocks -%}
  {% case block.type %}
    {% when 'defects-issues' %}
    {% assign defects-issues = true %}
    {% when 'qualifier' %}
    {% assign qualifier = true %}
  {% endcase %}
{% endfor %}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  @media screen and (max-width: 990px) {
    .background-primary.color-background-1.gradient.multicolumn.no-heading .multicolumn-list.contains-content-container {
      row-gap: 0;
      padding: 0;
    }
    .background-primary.color-background-1.gradient.multicolumn.no-heading .multicolumn-card__info {
      bottom: 30px;
    }
    .background-primary.color-background-1.gradient.multicolumn.no-heading .section-{{ section.id }}-padding{
      padding-right: 0;
      padding-left: 0;
    }
  }
{%- endstyle -%}

<section class="kyx-sneakers">
  <div class="kyx-sneakers_banner">
      {% liquid
      assign desktopImg = section.settings.image
      assign mobileImg = section.settings.image
      if section.settings.sm_image != blank
      assign mobileImg = section.settings.sm_image
      endif
      %}
      {% if section.settings.image != blank %}
      <img
          class="md-visible"
          src="{{ desktopImg | img_url: 'master' }}"
          alt="{{ section.settings.title | escape }}" width="1920px" height="471px">
      {% endif %}
      <img
          class="md-hidden"
          src="{{ mobileImg | img_url: 'master' }}"
          alt="{{ section.settings.title | escape }}" width="375px" height="250px">
  </div>
  <div class="rating-system">
      <div class="kyx-rating_title">
          {% if section.settings.title != blank %}
          <h2>{{ section.settings.title | escape }}</h2>
          {% else %}
          <h2>{{ page.title | escape }}</h2>
          {% endif %}
      </div>
      <div class="kyk-rating_desc">
          {% if section.settings.sub_title != blank %}
          <p>{{ section.settings.sub_title | newline_to_br }}</p>
          {% endif %}
      </div>
  </div>
  <div>
      {%- form 'contact', id: 'ContactForm', class: 'isolate page-width' -%}
      {%- if form.posted_successfully? -%}
      <p
          class="form-contact"
          tabindex="-1"
          autofocus>
          {% render 'icon-success' %}
          {{ 'templates.contact.form.post_success' | t }} In the meantime check out some more &nbsp;
          <a href="/" style="text-decoration:underline;">shoes!</a>
      </p>
      {%- elsif form.errors -%}
      <div class="form__message">
          <h2
              class="form-status caption-large text-body"
              role="alert"
              tabindex="-1"
              autofocus>
              {% render 'icon-error' %}
              {{ 'templates.contact.form.error_heading' | t }}
          </h2>
      </div>
      <ul class="form-status-list caption-large" role="list">
          <li>
              <a href="#ContactForm-email" class="link">
              {{ form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email }}
              </a>
          </li>
      </ul>
      {%- endif -%}
      {%- if form.posted_successfully? -%}
      <p class="sendothermessage">Need to send another message?
          <a href="/pages/contact-us">Click here</a>.
      </p>
      {%- else -%}
      <div class="parent_div_registration" style="display: flex; align-items:center; justify-content: center; flex-wrap: wrap;">
          <div class="address_first_container">
              <div class="parent_container">
                  <div class="sneakers_content">
                      <h5>HERE'S HOW IT WORKS</h5>
                      <ul class="sneakers_content-point">
                          <li>You fill out this form with the details of your used sneakers along with pictures.</li>
                          <li>
                              We will get back to you with a buyout offer with an option for “cash”* or store credit.
                              <ul>
                                  <li>If we are not going to offer to buy your sneakers we will notify you as well.</li>
                              </ul>
                          </li>
                          <li>This offer is good for 24 hours (so make sure to check your email!)</li>
                          <li>Upon acceptance of the offer we will send you a shipping label to drop your shoes off at UPS within 3 days of receipt.
                          </li>
                          <li>When we receive your shoes we will authenticate them and send your money through paypal or apply the store credit to your account. Depending on whichever you choose.</li>
                      </ul>
                      <div class="sneakers_notes">
                          <p >We buy collections too!<span style="font-weight:400; "> If you have more than 3 pairs you want to sell, reach out directly to <a href="webuysneakers@kyxsneakers.com"> webuysneakers@kyxsneakers.com</a></span></p>
                      </div>
                      <p>*Our “cash” option is paid out via your choice of Paypal, Cash App, or Venmo.</p>
                      <p class="internation_notes">**For international inquiries please email webuysneakers@kyxsneakers.com before submitting</p>
                  </div>
              </div>
          </div>
          <div class="kyx_sell_btn" id="sell_btn">
            <button type="button">Sell now</button>
          </div>
      </div>
      
      <div id="multicoloumn_review" class="" >
          {%- liquid
          assign columns_mobile_int = section.settings.columns_mobile | plus: 0
          assign show_mobile_slider = false
          if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
          assign show_mobile_slider = true
          endif
          -%}
          <div class="multicolumn multicolumn-slider color-{{ section.settings.color_scheme }} gradient{% unless section.settings.background_style == 'none' and settings.text_boxes_border_thickness > 0 or settings.text_boxes_shadow_opacity > 0 %} background-{{ section.settings.background_style }}{% endunless %}{% if section.settings.title_review == blank %} no-heading{% endif %}">
              <div class="section-{{ section.id }}-padding isolate">
                  {%- unless section.settings.title_review == blank -%}
                  <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
                      <div class="title {{ section.settings.heading_size }} ForYouSectionTitle" id="foryou">
                          {{ section.settings.title_review | escape }}
                      </div>
                  </div>
                  {%- endunless -%}
                    <slider-component class="slider-mobile-gutter">
                        <ul
                            class="grid product-grid  grid--1-col-tablet-down  multicolumn-list grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop{% if show_mobile_slider %} slider slider--mobile slider--desktop grid--peek{% endif %}"
                            id="Slider-{{ section.id }}"
                            role="list"
                            >
                            {%- for block in section.blocks -%}
                              {% if block.type == 'column' %}
                                {%- assign empty_column = '' -%}
                                {%- if block.settings.image == blank
                                and block.settings.title == blank
                                and block.settings.text == blank
                                and block.settings.link_label == blank
                                -%}
                                {%- assign empty_column = ' multicolumn-list__item--empty' -%}
                                {%- endif -%}
                                <li
                                id="Slide-{{ section.id }}-{{ forloop.index }}"
                                onclick="window.location.href='{{ block.settings.link }}'"
                                style="cursor: pointer;"
                                class="multicolumn-list__item grid__item {% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{% if section.settings.column_alignment == 'center' %} center{% endif %}{{ empty_column }}"
                                {{ block.shopify_attributes }}
                                >
                                <div class="multicolumn-card  content-container">
                                    {% if section.settings.image_ratio == 'adapt' or section.settings.image_ratio == 'circle' %}
                                    {% assign spaced_image = true %}
                                    {% endif %}
                                    <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' or spaced_image %} multicolumn-card-spacing{% endif %}">
                                        
                                        {%- if block.settings.title != blank -%}
                                        <div class="review_name">
                                            {%- if block.settings.title != blank -%}
                                            <h3 class="reviews__title">{{ block.settings.title | escape }}</h3>
                                            <span class="review__title_small">{{ block.settings.sub_title | escape }}</span>  
                                            <span class="review__title_small_product" >- {{ block.settings.product_title | escape }} </span>
                                            {%- endif -%}
                                        </div>
                                        {%- endif -%}
                                    </div>
                                    <div class="multicolumn-card__info add-siz">
                                        {% comment %} {%- if block.settings.title != blank -%}
                                        <h3>{{ block.settings.title | escape }}</h3>
                                        {%- endif -%} {% endcomment %}
                                        {%- if block.settings.text != blank -%}
                                        <div class="rte">{{ block.settings.text }}</div>
                                        {%- endif -%}
                                        {%- if block.settings.link_label != blank -%}
                                        <a
                                        class="animate-arrow btn-blue-bg link"
                                        {% if block.settings.link == blank %}
                                        role="link" aria-disabled="true"
                                        {% else %}
                                        href="{{ block.settings.link }}"
                                        {% endif %}
                                        >
                                        {{- block.settings.link_label | escape -}}
                                        <span class="icon-wrap">&nbsp;{% render 'icon-arrow' %}</span></a
                                            >
                                        {%- endif -%}
                                    </div>
                                </div>
                                </li>
                              {% endif %}
                            {%- endfor -%}
                        </ul>
                        {%- if show_mobile_slider -%}
                        <div class="slider-buttons no-js-hidden medium-hide">
                            <button
                                type="button"
                                class="slider-button slider-button--prev"
                                name="previous"
                                aria-label="{{ 'general.slider.previous_slide' | t }}"
                                >
                            {% render 'icon-caret' %}
                            </button>
                            <div class="slider-counter caption">
                                <span class="slider-counter--current">1</span>
                                <span aria-hidden="true"> / </span>
                                <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
                                <span class="slider-counter--total">{{ section.blocks.size }}</span>
                            </div>
                            <button
                                type="button"
                                class="slider-button slider-button--next"
                                name="next"
                                aria-label="{{ 'general.slider.next_slide' | t }}"
                                >
                            {% render 'icon-caret' %}
                            </button>
                        </div>
                        {%- endif -%}
                    </slider-component>
                  
              </div>
          </div>
      </div>
      <div id="multi_img">
        {%- liquid
          assign columns_mobile_int = section.settings.columns_mobile | plus: 0
          assign show_mobile_slider = false
          if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
          assign show_mobile_slider = true
          endif
          -%}
          <div class="multicolumn-slider color-{{ section.settings.color_scheme }} gradient{% unless section.settings.background_style == 'none' and settings.text_boxes_border_thickness > 0 or settings.text_boxes_shadow_opacity > 0 %} background-{{ section.settings.background_style }}{% endunless %}{% if section.settings.title_review == blank %} no-heading{% endif %}">
              <div class="section-{{ section.id }}-padding isolate">
                  <div class="title_review_image">COLLECTIONS WE'VE BOUGHT</div>
                  <slider-component class="slider-mobile-gutter">
                      <ul
                          class="grid product-grid  grid--1-col-tablet-down  multicolumn-list grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--4-col-desktop {% if show_mobile_slider %} slider slider--mobile slider--desktop grid--peek{% endif %}"
                          id="Slider-{{ section.id }}"
                          role="list"
                          >
                          {%- for block in section.blocks -%}
                            {%- if block.type == "Image" -%}
                              <li
                              id="Slide-{{ section.id }}-{{ forloop.index }}"
                              onclick="window.location.href='{{ block.settings.link }}'"
                              style="cursor: pointer;"
                              class="multicolumn-list__item grid__item  slider__slide center">
                              <div class="multicolumn-card  content-container">
                                  <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' or spaced_image %} multicolumn-card-spacing{% endif %}">
                                      
                                      {% if block.settings.review_image != blank %}
                                        <div class="media mobile_img media--transparent">
                                          <img src="{{ block.settings.review_image | img_url: 'master' }}" class="multicolumn-card__image">
                                        </div>
                                      {% endif %}
                                  </div>
                              </div>
                              </li>
                            {%- endif -%}
                          {%- endfor -%}
                      </ul>
                      <div class="slider-buttons no-js-hidden medium-hide">
                          <button
                              type="button"
                              class="slider-button slider-button--prev"
                              name="previous"
                              aria-label="{{ 'general.slider.previous_slide' | t }}"
                              >
                          {% render 'icon-caret' %}
                          </button>
                          <div class="slider-counter caption">
                              <span class="slider-counter--current">1</span>
                              <span aria-hidden="true"> / </span>
                              <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
                              <span class="slider-counter--total">{{ section.blocks.size }}</span>
                          </div>
                          <button
                              type="button"
                              class="slider-button slider-button--next"
                              name="next"
                              aria-label="{{ 'general.slider.next_slide' | t }}"
                              >
                          {% render 'icon-caret' %}
                          </button>
                      </div>
                  </slider-component>
              </div>
          </div>
      </div>
         <div class="parent_div_registration submit_title" style="display: flex; align-items:center; justify-content: start; flex-wrap: wrap;">
            <h5>**Please Read Before Submitting**</h5>
            <p class="submitting_notes">- We are only making offers on Nike, Jordan, Adidas, and New Balance at this time.</p>
            <p class="submitting_notes">- We specialize in Used Sneakers. Any New Sneakers submitted that receive an offer will be below StockX.</p>
            <p class="submitting_notes">- Please understand the value between New and Used sneakers can vary greatly.</p>
            <p class="submitting_notes">- Please understand the demand for a shoe can also vary greatly between New and Used.</p>
            <p class="submitting_notes">- If your submission resales for less than $150-New, we will most likely pass on that item.</p>
            <p class="submitting_notes">- If you have a specific "ask" in mind, please share that in the additional information section. Whereas we try to make an offer on as many shoes as possible, it helps if you share any expectations you may have coming in.</p>
            <p class="submitting_notes">- Due to high volume, please allow 2-3 business days for a reply to your submission. If you have not received a reply, please check your spam/junk folder. Emails will come from webuysneakers@kyxsneakers.com.</p>
            <p class="submitting_notes">- Be nice :)</p>
        </div>
      <div class="parent_div_registration" style="display: flex; align-items:center; justify-content: center; flex-wrap: wrap;" id="from_block">
          <div class="address_first_container">
              <div class="parent_container">
                  <div class="container_one_address one_address_first">
                      <div class="info_container addr_first_info">
                          <label for="ContactForm-name">FIRST NAME*</label>
                          <input required class="field__input1" autocomplete="name" type="text" id="ContactForm-name" placeholder="Enter first name here" name="first_name" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}">
                      </div>
                      <div class="info_container addr_first_info">
                          <label for="ContactForm-lastname">LAST NAME*</label>
                          <input required class="field__input1" autocomplete="name" type="text" id="ContactForm-lastname" placeholder="Enter last name here" name="last_name" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}">
                      </div>
                      <div class="info_container addr_first_info">
                          <label>Email*</label>
                          <input required autocomplete="email" type="email" id="ContactForm-email" class="field__input1" name="email" spellcheck="false" placeholder="Enter email here" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" aria-required="true" {% if form.errors contains 'email' %}aria-invalid="true"aria-describedby="ContactForm-email-error"{% endif %}>
