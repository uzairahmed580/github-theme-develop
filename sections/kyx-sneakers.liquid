                  </div>
                  <div class="container_one_address one_address_third">
                      <div class="info_container">
                          <label for="contactBrandName">BRAND*</label>
                          <select required name="brand" id="contactBrandName">
                              <option value="">Select Brand</option>
                              <option value="Jordan" style="font-size:14px; font-family:termina-Regular">Jordan</option>
                              <option value="Nike" style="font-size:14px; font-family:termina-Regular">Nike</option>
                              <option value="Adidas" style="font-size:14px; font-family:termina-Regular">Adidas</option>
                              <option value="New Balance" style="font-size:14px; font-family:termina-Regular">New Balance</option>
                              <option value="Asics" style="font-size:14px; font-family:termina-Regular">Asics</option>
                              <option value="Reebok" style="font-size:14px; font-family:termina-Regular">Reebok</option>
                              <option value="Puma" style="font-size:14px; font-family:termina-Regular">Puma</option>
                              <option value="Vans" style="font-size:14px; font-family:termina-Regular">Vans</option>
                              <option value="Tombogo" style="font-size:14px; font-family:termina-Regular">Tombogo</option>
                              <option value="Converse" style="font-size:14px; font-family:termina-Regular">Converse</option>
                              <option value="Crocs" style="font-size:14px; font-family:termina-Regular">Crocs</option>
                              <option value="other" style="font-size:14px; font-family:termina-Regular">Others</option>
