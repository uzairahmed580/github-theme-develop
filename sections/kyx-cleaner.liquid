<section class="c-position-r">
  <div class="kyx-adv-content kyx-cleaner-slider">
    {% for block in section.blocks %}
      <div id="Slide-{{ section.id }}-{{ forloop.index }}" class="slick-slide ">
        <div class="kyx-adv-content-item {% if block.settings.image_alignment == 'right' %}right{% else %}left{% endif %}">
          <div class="kyx-adv-content-item-img {% if block.settings.image_alignment == 'right' %}lg_order-2 {% endif %}">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ section.settings.title | escape }}" />
            {% endif %}
          </div>
          <div class="kyx-adv-content-item-txt lg_order-1 {% if block.settings.image_alignment == 'right' %} lg_order-1 {% endif %}">
            <div class="kyx-adv-content-item-txt-detail">
              <div class="kyx-adv-item-txt-detail-img">
                {% if block.settings.icon_image != blank %}
                  <img src="{{ block.settings.icon_image  }}" alt="{{ section.settings.title | escape }}" />
                {% endif %}

              </div>
              <div class="kyx-adv-item-txt-detail-txt">
                {% if block.settings.title != blank %}
                  <h2>{{ block.settings.title | escape }}</h2>
                {% endif %}
                {% if block.settings.sub_title != blank %}
                  <p>{{ block.settings.sub_title | newline_to_br }}</p>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="btn--wrap">
    <button class="prev--btn">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="15"
        height="16"
        viewBox="0 0 15 16"
        fill="none">
