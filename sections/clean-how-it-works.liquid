<section>
  <div class="clean-how-works page-width">
    <div class="clean-how-works__title">
      {% if section.settings.title != blank %}
        <h2>{{ section.settings.title | escape }}</h2>
      {% endif %}
    </div>
    <div class="clean-how-works__block">
      {% for block in section.blocks %}
        <div class="clean-how-works__content">

          <div class="clean-how-works__content-width {% if block.settings.text_alignment == 'left' %} lg_order-1 {% else %} lg_order-2 {% endif %}">
            <div class="clean-block__title">
              <div class="circle ">
                {% if block.settings.no != blank %}
                  <h4>{{ block.settings.no | escape }}</h4>
                {% endif %}
              </div>
              {% if block.settings.image != blank %}
                <img
                  class=""
                  src="{{ block.settings.image | img_url: 'master' }}"
                  alt="{{ block.settings.logotitle | escape }}">
              {% endif %}
              {% if block.settings.title != blank %}
                <p>{{ block.settings.title | escape }}</p>
              {% endif %}
            </div>
            <div class="clean-how-works__desc">
              {% if block.settings.desc != blank %}
                <p>{{ block.settings.desc | newline_to_br }}</p>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="proclean_order_btn" id="order_btn">
    <button type="button">ORDER NOW</button>
  </div>
  <div class="clean-how-works_button">
    {% if section.settings.btn_label != blank %}
      <button class="clean-btn">{{ section.settings.btn_label }}</button>
    {% endif %}
  </div>
  <div class="how-it-works_point page-width">
    <div class="points_of-works">
      {% if section.settings.point != blank %}
        {{ section.settings.point | newline_to_br }}
      {% endif %}
      {% if section.settings.desc != blank %}
        <p>{{ section.settings.desc | newline_to_br }}</p>
      {% endif %}
    </div>
  </div>
</section>

<script>
  $(document).ready(function() {
    var aTag = $('#clean-offer')[0];
    $('#order_btn').click(function(e) {
      e.preventDefault();
      $('html,body').animate({
        scrollTop: aTag.offsetTop
      }, 'slow');
    });

    $('.proclean_order_btn').click(function(e) {
      e.preventDefault();

      $('html,body').animate({
        scrollTop: aTag.offsetTop
      }, 'slow');

    })
  })
</script>

