{% schema %}
  {
    "name": "Clean How It Works",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Text Heading"
      }, {
        "type": "text",
        "id": "btn_label",
        "label": "Button Label"
      }, {
        "type": "richtext",
        "id": "point",
        "label": "Clean Points"
      }, {
        "type": "textarea",
        "id": "desc",
        "label": "Service Text"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "text",
        "settings": [
          {
            "type": "text",
            "id": "no",
            "label": "Number"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Number  Border Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Headding"
          },
          {
            "type": "textarea",
            "id": "desc",
            "label": "Desc"
          }, {
            "type": "select",
            "id": "text_alignment",
            "label": "text alignment",
            "options": [
              {
                "value": "left",
                "label": "Left"
              }, {
                "value": "right",
                "label": "Right"
              }
            ],
            "default": "left"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Clean How It Works"
      }
    ]
  }
{% endschema %}